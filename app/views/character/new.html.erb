 <div class="container">
   <% @character = Character.new unless@character %>
   <%= form_for @character do |f| %>
      <div class="panel panel-default">
        <div class="panel-heading">キャラ登録</div>
        
        <div class="panel-body">
          <form class="form-horizontal">
            <div class="form-group">
              <%= f.label "名前", html: {class: 'col-sm-2 control-label'} %>
              <div class="col-sm-10">
                <%= f.text_field :name, html: {class: 'form-control'} %>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-sm-2 control-label">アビリティ</label>
                <%= f.fields_for :character_abilitys do |builder| %>
                  <%= render partial: "ability", locals:{abilities: @abilities}, f: builder %>
                <div id="links">
                  <%= link_to_add_association "add Ingredient", f, :equipment_ability %><br/>
                </div>
                <% end %>
            </div>
            
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                 <%= f.submit "登録" %>
              </div>
            </div>
          </form>
          
        </div>
      </div>
    <% end %>  
</div>