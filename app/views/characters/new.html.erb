<%= render 'navbar' %>

<div class="container">
    <% @character = Character.new unless@character %>
    <%= form_for @character, url: characters_path do |f| %>
      <div class="panel panel-default">
        <div class="panel-heading">キャラ登録</div>
        
        <div class="panel-body">
            <div class="form-group">
              <label class= "col-sm-3 control-label">名前</label>
                <div class="col-sm-9">
                  <%= f.text_field :name, html: {class: 'form-control'} %>
                </div>
            </div>

            <div class="form-group">
              <label class="col-sm-2 control-label">アビリティ</label>
                <%= f.fields_for :chara_abis do |abi| %>
                  <%= render 'chara_abi_fields', f: abi %>
                    <div id="links">
                      <%= link_to_add_association "アビリティ追加", f, :chara_abis %><br/>
                    </div>
                <% end %>
            </div>
            
            <div class="form-group">
              <label class="col-12 control-label">種類</label>
              <div class="col-sm-10 radio">
                <label><%= f.radio_button :genre, "モンハン" %>モンハン</label>
                <label><%= f.radio_button :genre, "素材集め" %>素材集め</label>
                <label><%= f.radio_button :genre, "戦争" %>戦争</label>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                 <%= f.submit "登録" %>
              </div>
            </div>
          </form>
        </div>
      </div>
    <% end %>
</div>