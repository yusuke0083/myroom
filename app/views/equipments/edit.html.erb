<div class="container">
  <div class="row">
  <div class="panel panel-default col-auto">
    <%= form_for @equipment, url: "/equipments/#{@equipment.id}" do |f| %>
      <h3>
        編集する
      </h3>
      
      <div class="panel-body">
        <div class="row">
        <div class="form-group">
          <label class="col-sm-5 control-label">装備名</label>
          <div class="col-10">
           <%= f.text_field :name %>
          </div>
        </div>
        </div>
        
        <div class="row">
        <div class="form-group">
          <label class="col-sm-3 control-label">装備部位</label>
          <div class="col-sm-10 radio">
            <label><%= f.radio_button :part, "手" %>手</label>
            <label><%= f.radio_button :part, "頭" %>頭</label>
            <label><%= f.radio_button :part, "胴" %>胴</label>
            <label><%= f.radio_button :part, "足" %>足</label>
            <label><%= f.radio_button :part, "アクセサリー" %>アクセサリー</label>
          </div>
        </div>
        </div>
      
        <div class="row">
          <div class="form-group">
            <label class= "col-sm-3 control-label">装備レベル</label>
            <div class="col-sm-10 radio">
              <label><%= f.radio_button :level, "1" %>1</label>
              <label><%= f.radio_button :level, "2" %>2</label>
              <label><%= f.radio_button :level, "4" %>4</label>
              <label><%= f.radio_button :level, "8" %>8</label>
              <label><%= f.radio_button :level, "12" %>12</label>
              <label><%= f.radio_button :level, "16" %>16</label>
              <label><%= f.radio_button :level, "20" %>20</label>
              <label><%= f.radio_button :level, "24" %>24</label>
              <label><%= f.radio_button :level, "28" %>28</label>
              <label><%= f.radio_button :level, "32" %>32</label>
              <label><%= f.radio_button :level, "36" %>36</label>
              <label><%= f.radio_button :level, "40" %>40</label>
              <label><%= f.radio_button :level, "44" %>44</label>
              <label><%= f.radio_button :level, "46" %>46</label>
            </div>
          </div>
        </div>
      
        <div class="row">
          <div class="form-group">
            <label  class="col-auto control-label">アビリティ</label>
              <%= f.fields_for :equip_abis do |abi| %>
                <%= render 'equip_abi_edit_fields', f: abi %>
                <div id="links">
                  <%= link_to_add_association "アビリティ追加", f, :equip_abis %><br/>
                </div>
              <% end %>
          </div>
        </div>  
          
        <div class="row">  
          <div class="form-group">
            <label  class="col-auto control-label">合計要求素材</label>
              <%= f.fields_for :equip_mates do |material| %>
                <%= render 'equip_mate_edit_fields', f: material %>
                <div id="links">
                  <%= link_to_add_association "素材追加", f, :equip_mates %><br/>
                </div>
              <% end %>
          </div>
        </div>
        
      </div>
  
      <%= f.submit "編集" %>
    <% end %>
  </div>
  </div>
</div>